<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LayoutSystem.MainPage">

    <FlexLayout Direction="Column">
        <Label BackgroundColor="DarkGoldenrod" Text="This is a Flexlayout" HorizontalTextAlignment="Center" FontSize="25"/>
        <FlexLayout Direction="ColumnReverse" FlexLayout.Grow="1">
            <Label BackgroundColor="DarkCyan" Text="This should be at the bottom of the page" HorizontalTextAlignment="Center" />
        </FlexLayout>
    </FlexLayout>
</ContentPage>