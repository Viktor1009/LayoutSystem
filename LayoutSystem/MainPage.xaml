<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LayoutSystem.MainPage">

    <FlexLayout Direction="Column" BackgroundColor="Blue">
        <Label BackgroundColor="DarkGoldenrod" Text="This is a Flexlayout" HorizontalTextAlignment="Center" FontSize="25"/>
        <VerticalStackLayout FlexLayout.Basis="200">
            <FlexLayout BackgroundColor="Lavender" Direction="Row" FlexLayout.Grow="1">
                <Label Text="This is at the side of the page"/>
            </FlexLayout>
        </VerticalStackLayout>
        <FlexLayout Direction="Column">
            <Label BackgroundColor="BurlyWood" Text="This should be in the middle of the screen" HorizontalTextAlignment="Center" FontSize="25"/>
        </FlexLayout>
    </FlexLayout>
</ContentPage>